<div class="container">
  <div class="row">
    <div class="col-12 mt-3">
      <h2>Todos nuestros departamentos</h2>
      <h4> Los pisos son <%= @flats.count %>.</h4>
    </div>
  </div>

  <div class="d-flex flex-wrap" >
    <%  @flats.each do |flat| %>
    <div class="card">
      <%= image_tag "#{flat.picture_url}", alt:"Imagen de departamento" %>
      <div class="card-body">
        <h5 class="card-title"><strong> <%= flat.name %> </strong></h5>
        <p class="card-text"><%= flat.address %></p>
        <div class="d-flex ">
          <p class= "me-3"><i class="fas fa-dollar-sign"></i><%= flat.price_per_night %></p>
          <br/>
          <p><i class="fas fa-users"></i><%= flat.number_of_guests %></p>
        </div>
      </div>
      <div class="card-action me-3 p-3 justify-content-between">
        <a class="card-link"><%= link_to  "More info", flat_path(flat) , {:class => "btn btn-outline-primary"}%></a>
        <a class="card-link"><%= link_to  "Edit", edit_flat_path(flat) , {:class => "btn btn-outline-warning"}%></a>
        <a class="card-link"><%= link_to  "Delete", flat_path(flat),method: :delete %></a>
      </div>
    </div>
    <% end %>
    </div>
  </div>



</div>



